<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd">

    <defaultCache
            maxElementsInMemory="100"
            timeToIdleSeconds="20"
            timeToLiveSeconds="20"
            overflowToDisk="false"
            diskPersistent="false"
            memoryStoreEvictionPolicy="LRU"
    />
    <cache
            name="fi.sangre.renesans.model.MultilingualKey"
            eternal="true"
            maxElementsInMemory="1000"
    />
    <cache
            name="fi.sangre.renesans.model.MultilingualKey.phrases"
            eternal="true"
            maxElementsInMemory="5000"
    />
    <cache
            name="fi.sangre.renesans.model.MultilingualPhrase"
            eternal="true"
            maxElementsInMemory="5000"
    />
    <cache
            name="fi.sangre.renesans.model.Survey"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="100"
    />
    <cache
            name="fi.sangre.renesans.model.Customer"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="1000"
    />
    <cache
            name="fi.sangre.renesans.model.Customer.questions"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="500"
    />
    <cache
            name="fi.sangre.renesans.model.Segment"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="100"
    />
    <cache
            name="fi.sangre.renesans.model.Segment.questions"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="500"
    />
    <cache
            name="fi.sangre.renesans.model.QuestionGroup"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="50"
    />
    <cache
            name="fi.sangre.renesans.model.Question"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="500"
    />
    <cache
            name="fi.sangre.renesans.model.Question.weights"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="1000"
    />
    <cache
            name="fi.sangre.renesans.model.Weight"
            timeToIdleSeconds="300"
            timeToLiveSeconds="600"
            maxElementsInMemory="1000"
    />
</ehcache>